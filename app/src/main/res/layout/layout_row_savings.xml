<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
            android:id="@+id/ui_name"
            android:layout_width="0dp" android:layout_height="wrap_content"
            tools:text="Name"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/ui_currency"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="EUR"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ui_name"/>

    <TextView
            android:id="@+id/ui_amount"
            android:layout_width="0dp" android:layout_height="wrap_content"
            tools:text="1234.23"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/ui_currency" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ui_name"/>


    <TextView
            android:id="@+id/ui_target"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:text="@string/target"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ui_name" app:layout_constraintEnd_toStartOf="@+id/ui_amount_goal"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:id="@+id/ui_amount_goal"
            android:layout_width="0dp" android:layout_height="wrap_content"
            tools:text="56785.78"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ui_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>