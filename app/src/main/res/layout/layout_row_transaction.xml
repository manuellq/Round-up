<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:id="@+id/ui_currency"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="EUR"
              app:layout_constraintTop_toTopOf="@+id/ui_amount" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"/>

    <TextView android:id="@+id/ui_amount"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              tools:text="123.34" app:layout_constraintEnd_toStartOf="@+id/ui_type" android:layout_marginEnd="16dp"
              app:layout_constraintTop_toTopOf="@+id/ui_type" app:layout_constraintStart_toEndOf="@+id/ui_currency"
              android:layout_marginStart="8dp"/>

    <TextView android:id="@+id/ui_type"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="Direct" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
    />

    <TextView android:id="@+id/ui_reference"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="reference" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ui_type"/>

</androidx.constraintlayout.widget.ConstraintLayout>